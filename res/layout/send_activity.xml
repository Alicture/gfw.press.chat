<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SendActivity" >

    <Button
        android:id="@+id/newMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="发送信息"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/toEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newMessage"
        android:layout_marginTop="20dp"
        android:hint="请输入接收号码"
        android:inputType="phone"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toEditText"
        android:layout_marginTop="10dp"
        android:hint="请输入发送内容，最多40个汉字"
        android:inputType="textMultiLine"
        android:textSize="14sp" />

    <Button
        android:id="@+id/passwordButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageEditText"
        android:layout_marginTop="20dp"
        android:text="设置密码"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordButton"
        android:layout_marginTop="20dp"
        android:hint="请输入约定的密码，至少四个英文数字"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/repasswordEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="10dp"
        android:hint="请再输一次约定的密码"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/repasswordEditText"
        android:layout_marginTop="20dp"
        android:text="保存密码"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveButton"
        android:layout_marginTop="20dp"
        android:text="取消修改"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancelButton"
        android:layout_marginTop="20dp"
        android:text="加密发送"
        android:textSize="16sp" />

</RelativeLayout>